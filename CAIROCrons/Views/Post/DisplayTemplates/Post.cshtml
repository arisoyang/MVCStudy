@model CAIROCrons.Models.Post 

<div>
    <h3>@Html.ActionLink(Model.Title, "Detail", new { id = Model.Id })</h3>
        
    <p>
        <em>Posted at @Model.Date.ToLocalTime().ToString() by @Model.Author</em>
    </p>

    <p>
        @Model.Summary
    </p>

    <p>
        (@Model.TotalComments comments)
    </p>

    <p>
        @Html.ActionLink("Delete Post", "Delete", new { id = Model.Id })
        |
        @Html.ActionLink("Edit Post", "Update", new { id = Model.Id })
    </p>
</div>